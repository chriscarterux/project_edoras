# Production Environment Configuration
# Copy this file to your VPS at /opt/project-edoras/.env.production

NODE_ENV=production
PORT=3000

# Domain Configuration - CHANGE THESE
DOMAIN_NAME=your-domain.com
ACME_EMAIL=admin@your-domain.com

# PostHog Configuration - CHANGE THIS
POSTHOG_API_KEY=your-posthog-api-key
POSTHOG_HOST=https://app.posthog.com

# Redis Configuration
REDIS_PASSWORD=secure_redis_password_change_this
REDIS_HOST=redis
REDIS_PORT=6379

# Security - CHANGE THESE
JWT_SECRET=your-jwt-secret-key-32-chars-min
SESSION_SECRET=your-session-secret-32-chars-min
ENCRYPT_KEY=your-32-character-encryption-key

# N8N Integration - CHANGE IF USING
N8N_WEBHOOK_URL=http://n8n:5678/webhook
N8N_API_KEY=your-n8n-api-key

# Optional Features
ENABLE_ANALYTICS=true
ENABLE_CACHING=true
ENABLE_API_DOCS=false
MAINTENANCE_MODE=false

# Monitoring
LOG_LEVEL=info
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3